package hhd;

import java.util.Scanner;

public class VendingMachine {
// 자판기 클래스
	private Scanner sc = new Scanner(System.in);
	private int choice;
	private int money;
	private int itemMoney;
	private Korean kor = new Korean();
	
	public void showTitle() {
		System.out.println(kor.getTitleMSG());
	}
	public void inputMoney() {
		showTitle();
		System.out.print(kor.getInputMoneyMSG());
		money = sc.nextInt();
	}
	public void showMenu() {
		System.out.println(kor.getShowMenu1());
		System.out.print(kor.getShowMenu2());
		choice = sc.nextInt();

	}
	public void calculateChange() {
		itemMoney = 0;
		if (choice == 1) {
			itemMoney = 700;
		} else if (choice == 2) {
			itemMoney = 1000;
		} else if (choice == 3) {
			itemMoney = 500;
		}

	}
	public void returnChange() {
		calculateChange();
		if (money - itemMoney < 0) {
			System.out.println(kor.getReturnCharge1());
		} else {
			money -= itemMoney;
			System.out.println(money + kor.getReturnCharge2());
		}
	}
}
